<div class="row">
  <% @listings.each do |listing| %>
    <div class="col-md-3 thumb_c">
      <div class="thumbnail">
        <%= link_to image_tag(listing.image.url), listing %>
        <div class="caption">
          <h4><%= listing.name %></h4>
          <p class="type-info listed-by"><%= "Listed by #{listing.user.name}" %></p>
          <p class="text-right price"><%= number_to_currency(listing.price) %></p>
          <% if (user_signed_in?) && (current_user == listing.user) && buttons %>
            <div class="center">
              <%= link_to 'Edit', edit_listing_path(listing), class: "btn btn-link" %>
              <%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<br>
<% if user_signed_in? %>
  <%= link_to "New Listing", new_listing_path, class: "btn btn-primary", data: { no_turbolink: true } %>
<% end %>